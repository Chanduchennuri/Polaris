name=busybox
from_source=busybox
revision=1
hostdeps="gcc automake"
deps="mlibc"
imagedeps="wget gcc"

configure() {
	true
}

build() {
	cp -rp "${source_dir}"/. ./
	make CROSS_COMPILE="x86_64-polaris-" -j${parallelism}
}

install() {
	mkdir -p "${dest_dir}/usr/bin"
	cp ./busybox "${dest_dir}/usr/bin"
}
