name=kernel
from_source=kernel
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
imagedeps="nasm"
deps="core-libs"

build() {
    cp -rp "${source_dir}"/. ./
    make -j${parallelism}
}

package() {
    mkdir -p "${dest_dir}/usr/share/polaris"
    cp ./arch/x86_64-pc/polaris.elf "${dest_dir}/usr/share/polaris/"
}
