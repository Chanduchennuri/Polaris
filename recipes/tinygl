name=tinygl
from_source=tinygl
revision=1
hostdeps="gcc automake pkg-config"
deps="mlibc"

configure() {
	true
}

build() {
	cd ${source_dir}/src
	make -j${parallelism}
	cd ${source_dir}/gears
	make -j${parallelism}
}

install() {
	cd ${source_dir}/gears
	mkdir -p "${dest_dir}/usr/bin"
	cp ./gears "${dest_dir}/usr/bin"
}
